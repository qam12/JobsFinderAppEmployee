    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/home_img"
            android:src="@mipmap/home_img"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="300dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="bottom"
                >

                <TextView
                    android:id="@+id/welTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WELCOME BACK"
                    android:textColor="@color/white"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/ageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="AGENT WILLIAMS!"
                    android:textSize="34sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/reTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="READY TO WORK?"
                android:textSize="15sp"
                android:textColor="@color/itmesCol"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/toggleImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@mipmap/switch_on" />

            <!--           <TextView
                           android:id="@+id/titleName"
