<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/location_icon" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/imageView38"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:id="@+id/view15"></View>

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView38"
        android:layout_alignStart="@+id/imageView38"
        android:layout_below="@+id/view15"
        android:layout_marginTop="19dp"
        app:srcCompat="@mipmap/done_icon" />

    <TextView
        android:id="@+id/textView173"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view15"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imageView38"
        android:layout_toRightOf="@+id/imageView38"
        android:text="Share location"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView176"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView39"
        android:layout_alignLeft="@+id/textView173"
        android:layout_alignStart="@+id/textView173"
        android:layout_marginBottom="5dp"
        android:text="Share documents"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>