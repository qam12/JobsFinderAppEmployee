<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/toolbar_findmission"/>

    <TextView
        android:id="@+id/textView183"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="MISSION INVITATIONS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/textView183"
        android:layout_alignStart="@id/textView183"
        android:layout_alignLeft="@id/textView183"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="15dp"
        android:id="@+id/view16"></View>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view16"
        android:id="@+id/find_mission_list_itemsExpand"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/find_mission_list_items"
        android:layout_above="@+id/textView183"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/imageView143"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/down_arrow"
        android:visibility="visible"
        android:layout_below="@+id/textView260"
        android:layout_alignRight="@+id/textView260"
        android:layout_alignEnd="@+id/textView260"
        android:layout_alignLeft="@+id/textView260"
        android:layout_alignStart="@+id/textView260"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView260"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/circle_missions"
        android:textSize="12sp"
        android:layout_alignTop="@+id/textView183"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>