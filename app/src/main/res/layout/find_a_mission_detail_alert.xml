<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Confirmation"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView191"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Agent, please be sure you comply with ALL the requirements stipulated by the client."
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/textView193"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView191"
        android:layout_marginTop="8dp"
        android:text="Confirming this, indicates that you are availale to complete this mission for the stated time and money. Failures will affect your score negatively."
        android:textAlignment="center"
        android:layout_alignLeft="@+id/textView191"
        android:layout_alignStart="@+id/textView191"
        android:layout_alignRight="@+id/textView191"
        android:layout_alignEnd="@+id/textView191" />

    <Button
        android:id="@+id/button32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView193"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectbg2"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_alignRight="@+id/textView251"
        android:layout_alignEnd="@+id/textView251" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button32"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectbg"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/textView251"
        android:layout_alignStart="@+id/textView251" />

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/popup_close_icon" />

    <TextView
        android:id="@+id/textView251"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView193"
        android:layout_centerHorizontal="true" />
</RelativeLayout>