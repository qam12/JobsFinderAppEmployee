                android:padding="15dp"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:drawableRight="@mipmap/camera_icon"/>

            <EditText
                android:id="@+id/editText22"
                android:layout_width="match_parent"
