                android:layout_marginRight="20dp"
                android:hint="Food handler"
                android:padding="15dp"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:drawableRight="@mipmap/camera_icon"/>

            <EditText
                android:id="@+id/editText23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/editText22"
                android:layout_below="@id/editText22"
                android:layout_marginRight="20dp"
                android:hint="Proserve"
                android:padding="15dp"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:drawableRight="@mipmap/camera_icon"/>

            <EditText
                android:id="@+id/editText24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/editText23"
                android:layout_below="@id/editText23"
                android:layout_marginRight="20dp"
                android:hint="Security"
                android:padding="15dp"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:drawableRight="@mipmap/camera_icon"/>

            <EditText
                android:id="@+id/editText25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/editText24"
                android:layout_below="@id/editText24"
                android:layout_marginRight="20dp"
                android:hint="Waiter/Waitress certification"
                android:padding="15dp"
                android:textSize="14sp"
                android:backgroundTint="@android:color/darker_gray"
                android:drawableRight="@mipmap/camera_icon"/>

            <EditText
                android:id="@+id/editText26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/editText25"
                android:layout_below="@id/editText25"
