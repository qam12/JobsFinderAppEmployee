<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView199"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Mission Taken"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView199"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Other agent was faster than you, Don't give up. Be faster next time!"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/button40"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView200"
        android:layout_marginTop="31dp"
        android:background="@drawable/rectbg2"
        android:text="View Details"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button41"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectbg"
        android:text="Accept"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/button40"
        android:layout_alignBottom="@+id/button40"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/imageView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/popup_close_icon" />
</RelativeLayout>