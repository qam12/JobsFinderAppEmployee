<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView84"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Attention Agent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/imageView20"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView84"
        android:layout_alignLeft="@+id/textView84"
        android:layout_alignRight="@+id/textView84"
        android:layout_alignStart="@+id/textView84"
        android:layout_below="@+id/textView84"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Please be sure that your uploaded documents are valid, accurate and factual. Any untruthful document could be reported by your employer. This may lead to a bad score or suspension of your account" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView85"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimary"
        android:text="Ok"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@mipmap/popup_close_icon" />
</RelativeLayout>